---
import datos from "../data/datos.json";
---



<html lang="es">
  <head>
    <meta charset="utf-8" />
    <title>Currículum - {datos.firstName} {datos.lastName}</title>
    <style>
      :root{
        --bg:#f6f8fb;
        --card:#ffffff;
        --accent:#0f62fe;
        --muted:#6b7280;
        --radius:12px;
        --maxw:900px;
        font-family: Inter, system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      }
      *{box-sizing:border-box}
      body{margin:0;background:var(--bg);color:#111}
      .wrap{max-width:var(--maxw);margin:32px auto;padding:20px}
      .card{background:var(--card);border-radius:var(--radius);box-shadow:0 6px 18px rgba(15,23,42,0.06);overflow:hidden;display:flex;gap:24px;align-items:flex-start;padding:28px}

      .col-left{width:260px;flex-shrink:0}
      .photo{width:100%;aspect-ratio:3/4;border-radius:12px;display:grid;place-items:center;background:linear-gradient(180deg,#e9eefc,#f8fbff);border:1px dashed rgba(15,99,255,0.12)}
      .photo img{width:100%;height:100%;object-fit:cover;border-radius:10px}
      .personal{margin-top:16px}
      .field{margin-bottom:10px}
      .label{font-size:12px;color:var(--muted);display:block}
      .value{font-weight:600;font-size:16px}

      .col-right{flex:1}
      h1{margin:0;font-size:20px}
      h2{font-size:14px;margin:14px 0 8px;color:var(--accent)}
      p{margin:8px 0;color:#222}

      .info-grid{display:grid;grid-template-columns:1fr 1fr;gap:12px;margin-top:8px}
      .chip{background:#f3f6ff;padding:8px 10px;border-radius:999px;display:inline-block;font-weight:600}

      @media (max-width:720px){
        .card{flex-direction:column}
        .col-left{width:100%}
        .info-grid{grid-template-columns:1fr}
      }

      .muted{color:var(--muted);font-size:13px}
    </style>
  </head>
  <body>
    <div class="wrap">
      <div class="card">
        <aside class="col-left">
          <div class="photo">
            <img src={datos.photo} alt="Foto" />
          </div>

          <div class="personal">
            <div class="field">
              <span class="label">Nombre</span>
              <div class="value">{datos.firstName}</div>
            </div>
            <div class="field">
              <span class="label">Apellido</span>
              <div class="value">{datos.lastName}</div>
            </div>
            <div class="field">
              <span class="label">Domicilio</span>
              <div class="muted">{datos.address}</div>
            </div>
            <div class="field">
              <span class="label">Teléfono</span>
              <div class="value">{datos.phone}</div>
            </div>
          </div>
        </aside>

        <main class="col-right">
          <header>
            <h1>{datos.firstName} {datos.lastName}</h1>
          </header>

          <section style="margin-top:18px">
            <h2>Información</h2>
            <p>{datos.info}</p>
          </section>

          <section style="margin-top:10px">
            <h2>Idioma</h2>
            <div class="info-grid">
              <div>
                <span class="label">Dominio del inglés</span>
                <div class="chip">{datos.english}</div>
              </div>
              <div>
                <span class="label">Disponible</span>
                <div class="muted">Remote / Presencial</div>
              </div>
            </div>
          </section>

          <section style="margin-top:16px">
            <h2>Contacto web</h2>
            <div style="margin-top:8px">
              <span class="label">Correo</span>
              <div class="muted">{datos.email}</div>
            </div>
          </section>
        </main>
      </div>
    </div>
  </body>
</html>
